<form class="top-margin">
    <%= form_for @article do |f| %>
        <div class ="form-group form">
            <label><strong>Title</strong></label>
            <%= f.text_field :title, class:"form-control", placeholder:"Enter Title" %>
        </div>
        <div class="form-group form">
             <label><strong>Description</strong></label>
             <%= f.text_area :description, class:"form-control", rows:"15", placeholder:"Enter text here" %>
        </div>
        <div class="form">
            <%= f.submit "Create Article", class:"btn btn-primary btn-danger" %>
        </div>
    <% end %>  
</form>





    
    